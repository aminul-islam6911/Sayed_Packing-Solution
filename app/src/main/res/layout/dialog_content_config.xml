<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:id="@+id/dialog_container_Super" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center"
        android:orientation="vertical">





        <EditText
            android:id="@+id/dlg_txt_config_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="From Mail...."
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/login_fields_text"
            android:textColorHint="@color/login_fields_hint_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dlg_txt_config_from_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail Password...."
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/login_fields_text"
            android:textColorHint="@color/login_fields_hint_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dlg_txt_config_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail Host...."
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/login_fields_text"
            android:textColorHint="@color/login_fields_hint_text"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/dlg_txt_config_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail Port...."
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/login_fields_text"
            android:textColorHint="@color/login_fields_hint_text"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/dlg_txt_config_subj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail Subject...."
            android:padding="10dp"
            android:maxLines="5"
            android:textColor="@color/login_fields_text"
            android:textColorHint="@color/login_fields_hint_text"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/dlg_txt_config_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail Body...."
            android:padding="10dp"
            android:maxLines="20"
            android:textColor="@color/login_fields_text"
            android:textColorHint="@color/login_fields_hint_text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dlg_btn_config_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/login_button_bg"
            android:padding="10dp"
            android:text="UPDATE"
            android:textColor="@color/login_button_text"
            android:textSize="14sp" />




</LinearLayout>















</RelativeLayout>