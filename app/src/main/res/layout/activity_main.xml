<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bg"
    tools:context=".MainActivity">




    <LinearLayout
        android:id="@+id/bodyContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="2dp">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/logo"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/login_app_title"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/logo"
            android:gravity="center"
            android:text="@string/home_heading"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="0dp"
                android:elevation="5dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/single_row_card_bg"
                android:layout_marginBottom="15dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_gravity="center"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:text="ADD"
                        android:textSize="18sp"
                        android:textColor="@color/hm_button_text"
                        android:layout_margin="0dp"
                        android:backgroundTint="@color/hm_button_bg"
                        android:shadowColor="@color/shadow"
                        android:id="@+id/btn_add"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_add_post"

                        />




                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="0dp"
                android:elevation="5dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/single_row_card_bg"
                android:layout_marginBottom="15dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_gravity="center"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:text="VIEW ALL"
                        android:textSize="18sp"
                        android:layout_margin="0dp"
                        android:textColor="@color/hm_button_text"
                        android:backgroundTint="@color/hm_button_bg"
                        android:shadowColor="@color/shadow"
                        android:id="@+id/btn_view_all"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_view_list"

                        />






                </LinearLayout>




            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="0dp"
                android:elevation="5dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/single_row_card_bg"
                android:layout_marginBottom="15dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_gravity="center"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:text="Incomplete"
                        android:textSize="18sp"
                        android:layout_margin="0dp"
                        android:textColor="@color/hm_button_text"
                        android:backgroundTint="@color/hm_button_bg"
                        android:shadowColor="@color/shadow"
                        android:id="@+id/btn_incomplete"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_late"

                        />


                </LinearLayout>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="0dp"
                android:elevation="5dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/single_row_card_bg"
                android:layout_marginBottom="15dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_gravity="center"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:text="Completed"
                        android:textSize="18sp"
                        android:layout_margin="0dp"
                        android:textColor="@color/hm_button_text"
                        android:backgroundTint="@color/hm_button_bg"
                        android:shadowColor="@color/shadow"
                        android:id="@+id/btn_completed"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_done"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>





        </LinearLayout>





    </LinearLayout>



</RelativeLayout>









